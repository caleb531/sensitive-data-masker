{
	"name": "Sensitive Data Masker",
	"version": "0.1.0",
	"manifest_version": 3,
	"description": "Masks the values of sensitive values like monetary amounts, credit card numbers, and other sensitive values",
	"icons": {
		"256": "icons/extension-icon.png"
	},
	"background": {
		"service_worker": "service-worker.ts",
		"type": "module"
	},
	"action": {
		"default_icon": {
			"128": "icons/extension-icon.png"
		},
		"default_title": "Sensitive Data Masker",
		"default_popup": "options.html"
	},
	"options_page": "options.html",
	"permissions": ["contextMenus", "storage", "activeTab"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.ts"]
		}
	]
}
